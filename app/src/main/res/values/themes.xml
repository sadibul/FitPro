<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.FitPro" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.FitPro.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/fitpro_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.FitPro</item>
    </style>
</resources>